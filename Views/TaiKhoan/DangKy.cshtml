@{
    ViewData["Title"] = "Đăng Ký";
}

@using BanSua4CE.ViewModels
@model DangKyVM

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TIỆM SỮA 4CE - Đăng Ký</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            max-width: 500px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .register-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 20px;
            text-align: center;
            color: hwb(230 6% 33%) !important
        }

        .form-group label {
            font-weight: 500;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

            .button-group .btn {
                flex: 1;
                padding: 10px;
                font-size: 1rem;
                border-radius: 5px;
            }

       
    </style>
</head>
<body>
    <div class="register-container">
        <h3 class="register-title">Đăng Ký Thành Viên</h3>

        <!-- Thông báo thành công -->
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["RegisterSuccess"]
            </div>
        }

        <form asp-action="DangKy" method="post">
            <div class="form-group">
                <label for="TenKh"><i class="fas fa-user"></i> Tên khách hàng:</label>
                <input asp-for="@Model.TenKh" class="form-control" placeholder="Nhập tên của bạn" />
                <span asp-validation-for="TenKh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Email"><i class="fas fa-envelope"></i> Email:</label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DiaChi"><i class="fas fa-map-marker-alt"></i> Địa Chỉ:</label>
                <input asp-for="@Model.DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SoDienThoai"><i class="fas fa-phone"></i> Số Điện Thoại:</label>
                <input asp-for="@Model.SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="MatKhau"><i class="fas fa-lock"></i> Mật khẩu:</label>
                <input asp-for="@Model.MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
        </form>


        <div class="button-group mt-3">
            <button type="submit" class="btn btn-primary">Đăng Ký</button>
            <a asp-action="DangNhap" asp-controller="TaiKhoan" class="btn btn-outline-primary">Đăng Nhập</a>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
