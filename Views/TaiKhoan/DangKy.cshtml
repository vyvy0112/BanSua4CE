
@{
    ViewData["Title"] = "DangKy";
}

 @using BanSua4CE.ViewModels
 @model DangKyVM
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TIỆM SỮA 4CE</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/HETHONGVACONGNGHEWEB/lienket/css/style.css">
</head>

<script src="~/HETHONGVACONGNGHEWEB/lienket/js/script.js"></script>

<body>
<div class="container mt-4">
<h3>Đăng Ký Thành Viên</h3>
@if (TempData["RegisterSuccess"] != null)
{
    <div id="registerSuccessMessage" data-message="@TempData["RegisterSuccess"]"></div>
}


<form asp-action="DangKy" method="post">
    <div>
        <label for="TenKh">Tên khách hàng:</label>
        <input asp-for="@Model.TenKh" class="form-control" />
        <span asp-validation-for="TenKh" class="text-danger"></span>
    </div>

    <div>
        <label for="Email">Email:</label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

            <div>
                <label for="DiaChi">Địa Chỉ:</label>
                <input asp-for="@Model.DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div>
                <label for="SoDienThoai">Số Điện Thoại:</label>
                <input asp-for="@Model.SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
    <div>
        <label for="MatKhau">Mật khẩu:</label>
        <input asp-for="@Model.MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Đăng Ký</button>
            <a asp-action="DangNhap" asp-controller="TaiKhoan" class="btn btn-primary">Đăng Nhập</a>
        </div>

   
</form>
</div>



 <script>
    window.addEventListener('DOMContentLoaded', (event) => {
        const messageElement = document.getElementById('registerSuccessMessage');
        if (messageElement) {
            const message = messageElement.getAttribute('data-message');
            if (message) {
                alert(message); 
            }
        }
    });
</script>


</body>
</html>