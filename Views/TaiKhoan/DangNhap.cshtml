@{
    ViewData["Title"] = "Đăng Nhập";
}
@using BanSua4CE.ViewModels
@model DangNhapVM

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TIỆM SỮA 4CE - Đăng Nhập</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 450px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 20px;
            text-align: center;
            color: hwb(230 6% 33%) !important
        }

        .form-group label {
            font-weight: 500;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

            .button-group .btn {
                flex: 1;
                padding: 10px;
                font-size: 1rem;
                border-radius: 5px;
            }

        .alert {
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h3 class="login-title" >Đăng Nhập</h3>

        <!-- Hiển thị thông báo lỗi -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="DangNhap" asp-controller="TaiKhoan" method="post">
            <div class="form-group">
                <label for="Email"><i class="fas fa-envelope"></i> Email:</label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="MatKhau"><i class="fas fa-lock"></i> Mật khẩu:</label>
                <input asp-for="@Model.MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="button-group mt-3">
                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                <a asp-action="DangKy" asp-controller="TaiKhoan" class="btn btn-outline-primary">Đăng Ký</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
