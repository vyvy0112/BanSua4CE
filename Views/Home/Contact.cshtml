@{
    ViewData["Title"] = "Contact";
}
@model BanSua4CE.Data.LienHe

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TIỆM SỮA 4CE</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/HETHONGVACONGNGHEWEB/lienket/css/style.css">
</head>

<script src="~/HETHONGVACONGNGHEWEB/lienket/js/script.js"></script>

<body>
<div class="container mt-4">
    <h2>Liên hệ với chúng tôi</h2>
    <p>Nếu bạn có bất kỳ câu hỏi nào, hãy liên hệ với chúng tôi qua các phương thức sau:</p>
    <ul>
        <li>📍 Địa chỉ: Đường số 7, Phường Cái Khế, Quận Ninh Kiều, TP.Cần Thơ </li>
        <li>📞 Điện thoại: 0766 968 178</li>
        <li>📧 Email: tiemsua4ce@gmail.com</li>
    </ul>

    <h3>Gửi phản hồi</h3>
    <div class="status alert alert-success" style="display: none"></div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <form method="post" asp-action="Contact" asp-controller="Home">
      
        <div class="mb-3">
            <label asp-for="@Model.HoTen" class="form-label">Họ Tên:</label>
            <input asp-for="@Model.HoTen" class="form-control" required>
            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email: </label>
            <input asp-for="@Model.Email" class="form-control" required>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.NoiDung" class="form-label">Nội Dung</label>
            <input asp-for="@Model.NoiDung" class="form-control" required>
            <span asp-validation-for="@Model.NoiDung" class="text-danger"></span>
        </div>
       
       
        <button type="submit" class="btn btn-primary">Gửi</button>
    </form>
   
</div>
</body>
</html>

