@model BanSua4CE.Data.SanPham

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="QLSP" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <input type="hidden" asp-for="IdSp" />
            <div class="form-group">
                <label asp-for="TenSp" class="control-label"></label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="XuatXu" class="control-label"></label>
                <input asp-for="XuatXu" class="form-control" />
                <span asp-validation-for="XuatXu" class="text-danger"></span>
            </div>
            <div class="form-item">
                <label class="form-label my-3" for="hinhanh">Hình Ảnh<sup>*</sup></label>
                <input type="file" name="hinhanh" class="form-control" />

                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <div class="mt-2">
                        <p>Hình hiện tại:</p>
                        <img src="~/hinhanh/@Model.HinhAnh" width="100" />
                    </div>
                }

                <!-- Hidden để giữ ảnh cũ nếu không chọn ảnh mới -->
                <input type="hidden" name="HinhAnhCu" value="@Model.HinhAnh" />
            </div>
   

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDanhMuc" class="control-label"></label>
                <select asp-for="IdDanhMuc" class="form-control" asp-items="ViewBag.IdDanhMuc"></select>
                <span asp-validation-for="IdDanhMuc" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
           @*  <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div> *@
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="QLSP" class="btn btn-sm btn-primary">Back to List</a>
</div>

