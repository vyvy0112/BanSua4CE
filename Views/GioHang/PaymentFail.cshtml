@model BanSua4CE.Data.VnPay
<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-danger">
        <div class="card-header bg-danger text-white text-center py-3">
            <h3>❌ Thanh toán thất bại!</h3>
        </div>
        <div class="card-body fs-5">
            <p><strong>🧾 Mã đơn hàng:</strong> <span class="text-primary">@Model.OrderId</span></p>
            <p><strong>📄 Thông tin đơn hàng:</strong> @Model.OrderDescription</p>
            <p><strong>💰 Phương thức thanh toán:</strong> <span class="text-danger">@Model.PaymentMethod</span></p>
            <p><strong>🔢 Mã giao dịch (VNPay):</strong> <code class="text-dark">@Model.TransactionId</code></p>  </div>
        <div class="card-footer text-center">
            <a href="/" class="btn btn-primary me-2">🏠 Về trang chủ</a>
        </div>
    </div>
</div>



